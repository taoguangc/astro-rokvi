---
// A Feed section
// ------------
// Description: A  section with feeds organised a a vertical list of items.

// Components
// - Layout
import Section from '../../Section.astro'
import Col from '../../Col.astro'
import Row from '../../Row.astro'

// Props
type Props = {
	data: Array<{
		title: string
		date?: string
		body?: string
		listItems?: Array<{ listItem: string }>
	}>
	classes?: string
}
const { data, classes } = Astro.props
---

<Section id="changelog">
	<Row>
		<Col span="2" />
		<Col span="8">
			<Feed data={data} classes={classes} />
		</Col>
		<Col span="2" />
	</Row>
</Section>
