---
import { Image } from 'astro:assets'
import AboutImage from '../../assets/home/legacy-image.jpg'
import { getCollection } from 'astro:content'
const posts = await getCollection('posts')
posts.sort((a, b) => b.data.pubDate - a.data.pubDate)
---

<section class="mx-auto grid max-w-8xl grid-cols-3 gap-y-12 px-5 py-20">
	<div class="col-span-3">
		<h3 class="col text-sm">BLogs</h3>
		<h2 class="col text-4xl leading-snug">LATEST ARTICLES</h2>
	</div>
	{
		posts.slice(0, 3).map((post) => (
			<div class="col-span-1">
				<a href={`/posts/${post.slug}`}>
					<img src="" />
					<h4>{post.data.title}</h4>
				</a>
			</div>
		))
	}
</section>
