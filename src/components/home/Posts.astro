import type { CollectionEntry } from 'astro:content'
type post = CollectionEntry<'posts'>

import { getCollection } from 'astro:content'
const posts = (await getCollection('posts'))
	.sort((a: post, b: post) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3)
---

<section class="mx-auto grid max-w-8xl grid-cols-3 gap-y-12 px-5 py-20">
	<div class="col-span-3">
		<h3 class="col text-sm">Blogs</h3>
		<h2 class="col text-2xl leading-snug md:text-4xl">LATEST ARTICLES</h2>
	</div>
	{
		posts.map((post) => (
			<div class="col-span-1">
				<a href={`/posts/${post.slug}`}>
					<img src="" />
					<h4>{post.data.title}</h4>
				</a>
			</div>
		))
	}
</section>
